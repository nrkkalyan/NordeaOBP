<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
 
	<persistence-unit name="datasoure" transaction-type="JTA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>jdbc/EBRIDGE</jta-data-source>  
		 <class>com.nordea.filechannels.transmissionhistory.commons.persistence.entity.ErrorCode</class>
		 <class>com.nordea.filechannels.transmissionhistory.commons.persistence.entity.FileHistoryEntity</class>
		 <class>com.nordea.filechannels.transmissionhistory.commons.persistence.entity.FileTableEntity</class>
		 <class>com.nordea.filechannels.transmissionhistory.commons.persistence.entity.TransmissionHistoryEntity</class>
		 <class>com.nordea.filechannels.transmissionhistory.commons.persistence.entity.ThConfiguration</class>
		 <class>com.nordea.filechannels.transmissionhistory.commons.persistence.entity.JobScheduler</class>
		 <class>com.nordea.filechannels.thviewer.persistence.view.CustomerReportView</class>
		 <class>com.nordea.filechannels.transmissionhistory.commons.persistence.entity.FileTypesEntity</class>
		 
		 <shared-cache-mode>ALL</shared-cache-mode>
 
 
		<properties>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>  
			<property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.WeblogicJtaPlatform" />
		</properties>
	</persistence-unit>

</persistence>

